@model IEnumerable<FractalDemo.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CATEGORYS</h1>

<p>
    <a asp-action="Create">Create Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Categoria_Id">Edit</a>|
                <a asp-action="Delete" asp-route-id="@item.Categoria_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
